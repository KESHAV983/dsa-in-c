#include <stdio.h>
int sum_of_numbers(int n)
{
if (n <= 0)
return 0;
return n + sum_of_numbers(n - 1);
}
int main()
{
int num;
printf("Enter a positive integer: ");
scanf("%d", &num);
if (num < 0)
{
printf("Please enter a positive integer.\n");
return 1;
}
int result = sum_of_numbers(num);
printf("The sum of numbers from 1 to %d is: %d\n", num, result);
return 0;
}
#Generating Fibonacci Sequence
#include <stdio.h>
int fibonacci(int n)
{
    if (n <= 1)
        return n;
    return fibonacci(n - 1) + fibonacci(n - 2);
}
int main()
{
    int n, i;
    printf("Enter number of terms: ");
    scanf("%d", &n);
    if (n <= 0)
    {
        printf("Please enter a positive integer.\n");
        return 1;
    }
    printf("Fibonacci Series: ");
    for (i = 0; i < n; i++)
    {
        printf("%d ", fibonacci(i));
    }
    printf("\n");
    return 0;
}
#(For Tower of Hanoi)
#include <stdio.h>
void tower_of_hanoi(int source, int helper, int destination, int n)
{
    if (n == 1)
    {
        printf("Move disk 1 from rod %d to rod %d\n", source, destination);
        return;
    }
    tower_of_hanoi(source, destination, helper, n - 1);
    printf("Move disk %d from rod %d to rod %d\n", n, source, destination);
    tower_of_hanoi(helper, source, destination, n - 1);
}
int main()
{
    int n;
    printf("Enter the number of disks: ");
    scanf("%d", &n);
    if (n <= 0)
    {
        printf("Please enter a positive integer.\n");
        return 1;
    }
    printf("The sequence of moves involved in solving the Tower of Hanoi are:\n");
    tower_of_hanoi(1, 2, 3, n);
    return 0;
}